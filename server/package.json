{
  "name": "floyd",
  "version": "0.1.0",
  "private": true,
  "author": "Tom Redman",
  "description": "Floyd is a personal assisstant that continually learns about you, and can take actions on your behalf like making phone calls.",
  "keywords": [
    "ai",
    "gpt4",
    "chat",
    "floyd",
    "openai",
    "convex",
    "openai",
    "chatbot",
    "personal",
    "assistant"
  ],
  "repository": "https://github.com/get-convex/ai-world-fair.git",
  "homepage": "https://convex.dev",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "rimraf dist && tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --config .prettierrc --write .",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "test:cov": "vitest run --coverage",
    "release": "semantic-release",
    "prepare": "husky"
