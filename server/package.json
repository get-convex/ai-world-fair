    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-ws": "^5.0.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "openai": "^4.52.0",
    "path": "^0.12.7",
    "pino-http": "^10.0.0",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.2.0",
    "wavefile": "^11.0.0",
    "zod": "^3.22.4"
